<resources>
    <!-- Base application theme. -->
    <style name="Theme.HRautomation" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>

        <!--Material?-->
        <item name="colorOnSurface">@color/onSurface</item>

        <!-- Secondary brand color. -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>

        <!--Background-->
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!--Recycler View Item Style-->
    <style name="SelectableViewItemStyle">
        <item name="android:foreground">@drawable/recycler_view_item_ripple_shape</item>
        <item name="android:background">@drawable/recycler_view_item_shape</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!--Custom Search View Style-->
    <style name="CustomSearchViewStyle">
        <!--        <item name="android:imeOptions">actionSearch</item>-->
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_search_shape</item>
        <item name="android:drawableRight">@drawable/ic_baseline_search_24</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="SplashTheme" parent="Theme.HRautomation">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>